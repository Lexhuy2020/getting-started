pipeline {
    agent any


    stages {
        stage("build image run image HUy") {
            steps {
                sh "docker build -t getting_start:001 -f Dockerfile ." 
                sh "docker run --name getting -d -p 3000:3000 getting_start:001"
            }
        }

        stage("stop container") {
            steps {
                sh "docker ps"
                sh "docker stop getting"
                
            }
        }
}
      
            post {
                always {
                   sh 'docker ps'
                 
                }
            }
        
}
